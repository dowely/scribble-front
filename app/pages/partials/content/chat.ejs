<div class="content">

  <div class="content__left-col">
    <div class="content__viewer content__viewer--chat">

      <div class="chat-forum" data-index="1">
        forum
      </div>

      <div class="chat-rooms" data-index="2">
        <div class="chat-rooms__wrapper">

          <div class="chat-rooms__hide-above"></div>

          <!-- div.chat-rooms__room-container -->

          <div class="chat-rooms__new-room">

            <div class="chat-rooms__new-room__add-container">
              <div class="chat-rooms__new-room__add-bar"></div>
              <div class="chat-rooms__new-room__add-bar"></div>
            </div>

            <div class="chat-rooms__new-room__close">

              <div class="chat-rooms__new-room__close-tap-area"></div>

              <svg class="chat-rooms__new-room__close-icon">
                <use href="#circle-xmark-regular"></use>
              </svg>

            </div>

          </div>

          <%- include ../components/chat/_chat-users.ejs %>

          <div class="chat-rooms__hide-below"></div>
          
        </div>
      </div>

    </div>
  </div>

  <div class="content__right-col">
    <div class="content__viewer">
      <%- include ../components/chat/_chat-users.ejs %>
    </div>
  </div>
</div>